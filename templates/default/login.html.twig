<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdnjs.cloudflare.com/ajax/libs/typicons/2.0.9/typicons.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body class="az-body az-light">
        {% block body %}
        <div class="pd-30 pd-sm-40 bg-gray-200 wd-xl-75p">
            <div class="row row-xs">
              <div class="col-md-5">
                <input type="text" class="form-control" placeholder="Enter your username">
              </div><!-- col -->
              <div class="col-md-5 mg-t-10 mg-md-t-0">
                <input type="password" class="form-control" placeholder="Enter your password">
              </div><!-- col -->
              <div class="col-md mg-t-10 mg-md-t-0">
                <button class="btn btn-az-primary btn-block">Sign In</button>
              </div><!-- col -->
            </div><!-- row -->
        </div>
        {% endblock %}
        {% block javascripts %}
            <script src=" {{ asset('dist/app.bundle.js')}} "></script>
        {% endblock %}
    </body>
</html>
